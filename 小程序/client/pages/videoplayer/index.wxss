/*
	评论样式
 */
.rating-btn-wrapper {
	display:flex;
	justify-content: center;
	align-items: center;
	height: 200rpx;
	background-color: #fff;
}

.comment-prompt {
	font-size: 28rpx;
	color: #399aff;
	margin-top: 20rpx;
	text-align:center;
}

.comments-item {
	overflow:hidden;
	padding: 20rpx;
	box-sizing:border-box;
	background-color: #fff;
}

.header-icon {
	float:left;
	width: 80rpx;
	height: 80rpx;
	margin-right: 20rpx;
}

.comment-text-info {
	overflow:hidden;
}

.comment-user-and-rating {
	display:flex;
	justify-content: space-between;
	align-items: center;
	height: 40rpx;
}

.comment-user-name {
	font-size: 28rpx;
	color: #333;
}

.star-rating {
	overflow:hidden;
}
.star-item {
	float:left;
	width:30rpx;
	height:30rpx;
	margin-left: 10rpx;
}

.comment-time {
	font-size: 24rpx;
	color: #999;
}

.comment-content {
	color: #666;
	font-size: 24rpx;
	margin-top: 20rpx;
}

/*
	提交评论的弹出框
 */

.comment-dialog {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 0;
	background-color: rgba(0, 0, 0, 0.5);
}

.comment-field {
	position:absolute;
	top: 50%;
	left: 50%;
	transform:translate(-50%, -50%);
	width: 60%;
	background-color: #fff;
	border-radius: 8px;
}

.comment-title {
	font-size: 22rpx;
	color: #666;
	text-align: center;
	margin: 20rpx 0;
}

.comment-star-rating-wrapper {
	position: relative;
	height: 60rpx;
}
.comment-star-rating-wrapper .star-rating {
	position: absolute;
	top: 50%;
	left: 50%;
	transform: translate(-50%, -50%);
}
.comment-field .comment-text {
	font-size: 22rpx;
	color: #333;
	text-align: center;
	margin: 20rpx 0;
}
.comment-input-field {
	width: 100%;
	height: 100px;
	padding: 10px;
	font-size: 22rpx;
	color: #666;
	box-sizing: border-box;
	background-color: #f2f2f2;
}
.textarea-placeholder {
	font-size: 22rpx;
	color: #999;
}

.submit-comment-btn {
	font-size: 28rpx;
	color: #7fabfd;
	text-align: center;
	padding: 20rpx 0;
}
